<div class="panel panel-default">
   <div class="row">
      <div class="col-xs-9 col-md-6">
        <ul class="list-group">
          <li class="list-group-item list_head"><strong>顾客信息</strong></li>
          <li class="list-group-item">
            顾客姓名：
            <input name="username" id="order_username" type="text" value="">
          </li>
          <li class="list-group-item">
            联系电话：
            <input class="usertel" id="order_usertel" type="tel" value="">
          </li>
          <li class="list-group-item">
              送酒地址：
              <span class="text_inline">阜阳市</span>
              <select  class ="form-control select_inline" id= 'order_address_area' required aria-selected ="false" >
                  <option hidden ="hidden"></option>
                  <option>颍州区</option>
                  <option>颍泉区</option>
                  <option>颍东区</option>
              </select>
              <textarea  class ="form-control address_detail" id = 'order_address_detail'></textarea>
          </li>
          <li class="list-group-item">
            备注：
            <textarea  class ="form-control" id="order_note"></textarea>
          </li>
        </ul>
      </div>    <!-- User Info Ends-->

      <div class="col-xs-9 col-md-6">
          <ul class="list-group">
            <li class="list-group-item list_head"><strong>酒水信息</strong></li>

            <!-- Table to show specific wine info-->

            <table class="table table-bordered" style="margin-bottom:0px">
                <thead>
                  <tr>
                      <th width="220px" nowrap>酒种类</th>
                      <th width="50px" nowrap>单价</th>
                      <th width="50px">数量</th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="order_wineinfo">
                      <th>
                        <select class ="winedescribe" required aria-selected ="false">
                          <option hidden ="hidden"></option>
                          <%for(var i = 0;i < wines.length; i++){ %>
                          <option><%=wines[i].describe%></option>
                          <% } %>
                        </select>
                      </th>
                      <th>
                        <select class ="winewechatprice" required readonly aria-selected ="false" >
                          <option hidden ="hidden"></option>
                          <% for(var i = 0;i < wines.length; i++){ %>
                          <option><%=wines[i].wechatPrice%></option>
                          <% } %>
                        </select>
                      <th>
                        <input type = 'number' class = 'winenumber' value ="" required/>
                      </th>
                  </tr>
                </tbody>
            </table>

            <li class="list-group-item">
              <button class="btn btn-md btn-default">添加</button>
            </li>
            <li class="list-group-item">
              <strong>选择快递点：</strong>
                  <select class ="form-control" id = 'order_dispath'required aria-selected ="false" >
                    <option hidden ="hidden"></option>
                    <% for(var i = 0;i < alldispatches.length;i++){%>
                    <option><%=alldispatches[i]%></option>
                    <%}%>
                  </select>
            </li>
          </ul>
      </div>    <!-- Commodity Info Ends-->
    </div>  <!-- row ends-->
            <!-- Submit buttons -->
    <div style="" class="well submit_div">
      <div class="center" style="">
        <button class="btn btn-lg btn-success button_margin button_check" type="button" onClick="">确认创建</button>
            <!-- For the form: click check-button to skip into unshipped state-->
            <!-- For Customer Service: click to skip on unprocessed page -->
            <!-- In view of above reason, we should not display right layout(warning message) but let C.S. focus on buill current form-->
        <button class="btn btn-lg btn-danger button_margin" id="delete" data-toggle="modal" data-target="#alert_delete">删除</button>
      </div>
    </div>  <!-- Submit buttons ends-->

</div>