<div class="panel panel-default">
  <div class="panel-heading summaryinfo row">
    <div class = "col-xs-4">
    <span>订单编号：<%= orderID %></span>
    </div>
    <div class = "col-xs-4">
      <span class="form_head_date">下单时间：<%= date.year %>-<%= date.month %>-<%= date.day %>&ensp;<%= date.hour %> : <%= date.minute %> </span>
    </div>
    <div class="col-xs-4 text_right">
        <strong>订单状态：</strong>
        <span class="label label-warning form_state">已发货</span>
        <span class="label label-default form_state"><%= isFirst ? "首次下单" : "非首次下单"%></span>
    </div>
  </div>

      <!--
      <div class="panel-body">
      </div>
      -->

  <div class="row">

      <!-- Following show user info-->

      <div class="col-xs-9 col-md-6">
          <ul class="list-group">
            <li class="list-group-item list_head"><strong>顾客信息</strong></li>
            <li class="list-group-item">
              顾客姓名：
              <input name="username" id="order_username" type="text" value="<%= address.name %>" readonly>
            </li>
            <li class="list-group-item">
              联系电话：
              <input name="username" id="order_usertel" type="tel" value="<%= address.tel %>"readonly>
            </li>
            <li class="list-group-item">
                送酒地址：
                <span class="text_inline">阜阳市</span>
                <select class ="form-control select_inline"required aria-selected ="false" readonly>
                    <option hidden ="hidden"></option>
                    <option selected = '<%= address.area == '颍州区' ? 'selected' : ''%>'>颍州区</option>
                    <option selected = '<%= address.area == '颍泉区' ? 'selected' : ''%>'>颍泉区</option>
                    <option selected = '<%= address.area == '颍东区' ? 'selected' : ''%>'>颍东区</option>
                </select>
                <textarea  class ="form-control address_area" style="margin-top:10px; height:35px" readonly><%= address.detail %></textarea>
            </li>
            <li class="list-group-item">
              <strong>发货时间：</strong>
              <span class="form_head_date"><%= shipDate.year %>-<%= shipDate.month %>-<%= shipDate.day %>&ensp;<%= shipDate.hour %> : <%= shipDate.minute %> </span>
            </li>
            <li class="list-group-item">
              备注：
              <textarea  class ="form-control" id="textarea_else" readonly><%= notes %></textarea>
            </li>
          </ul>
      </div>    <!-- User Info Ends-->

      <!-- Following show Commodity Info-->

      <div class="col-xs-9 col-md-6">
          <ul class="list-group">
            <li class="list-group-item list_head"><strong>酒水信息</strong></li>

            <!-- Table to show specific wine info-->

            <table class="table table-bordered">
                <thead>
                  <tr>
                      <th>酒种类</th>
                      <th>单价</th>
                      <th>数量</th>
                  </tr>
                </thead>
                <tbody>
                <%for(var i = 0;i < shopOnce.length;i++){%>
                  <tr>
                      <th><%= shopOnce[i].describe %></th>
                      <th><%= shopOnce[i].wechatPrice %></th>
                      <th><%= shopOnce[i].number %></th>
                  </tr>
                <%}%>
                </tbody>
            </table>

            <li class="list-group-item">
              <strong>需付现金：</strong><span><%= cashNeeded %></span>
              <span style="padding-left:10px">(总价：</span><span><%= cashTotal %></span>
              <span>, 现金券：</span><span><%= coupon %></span><span></span>,代金券：</span><span><%= voucher %></span><span>)</span>
            <li class="list-group-item">
              <strong>快递点：</strong>
                 <span><%= dispatchCenter %></span>
            </li>
            <li class="list-group-item">
              <strong>快递员：</strong>
                 <span><%= shipStaff %></span>
            </li>
          </ul>
      </div>    <!-- Commodity Info Ends-->
  </div>  <!-- row ends-->
</div>   <!-- Panel: Form Info Ends-->

<div class="modal fade" id="alert_delete" tabindex="-1" role="dialog"
   aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#E8A35A;">
                <button type="button" class="close"
                   data-dismiss="modal" aria-hidden="true">
                      &times;
                </button>
                <h4 class="modal-title" id="myModalLabel" style="text-align:center;">
                  <span class="alert_text">警告：订单删除后不可复原，请确认这一操作</span>
                </h4>
            </div> <!-- modal header ends-->

            <div class="modal-body">
                <div class="" style="padding-left:25px; padding-top:0px;">
                      <h3><strong>删除订单原因：</strong></h3>

                      <label class="checkbox" for="checkbox1">
                      <input type="checkbox" value="" id="checkbox1">
                      reason1
                      </label>

                      <label class="checkbox" for="checkbox2">
                      <input type="checkbox" checked="checked" value="" id="checkbox2">
                      reason2
                      </label>

                      <label class="checkbox" for="checkbox3">
                      <input type="checkbox" value="" id="checkbox3">
                      reason3
                      </label>

                      <p>
                        <h3><strong>其他信息：</strong></h3>
                        <textarea  class ="form-control">TBD</textarea>
                        <button class="btn btn-md btn-default" style="margin-top:10px;">保存</button>
                      </p>
                </div>
            </div> <!-- modal body ends-->

            <div class="modal-footer">
                <button class="btn btn-lg btn-danger" type="button" data-dismiss="modal">确认删除</button>
                <button class="btn btn-lg btn-default" type="button" data-dismiss="modal">取消</button>
            </div> <!-- modal footer ends-->
        </div> <!-- /.modal-content -->
    </div> <!-- /.modal -->
</div>    <!-- Alert when delete Ends-->